<div class="container">
  <h1><%= @admin.name%>'s Admin Controls</h1>
  <br>
  <h2>User List:</h2>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Type</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= (user.type.nil?) ? "User" : user.type %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
