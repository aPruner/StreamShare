<div class="container">

  <h1><%= @user.name %>'s Library :</h1>

  <table>
    <tr>
      <th>Title</th>
      <th>Operations</th>
    </tr>

    <% @user.media.each do |medium| %>
    <tr>
      <td>
        <%= medium.title %>
      </td>
      <td>
        <%= link_to 'Delete', library_path(:medium_id => medium.id) , method: :delete%>
      </td>
    </tr>
    <% end %>
  </table>

  <%= link_to "Upload", new_upload_path, class: "btn btn-primary" %>

</div>
